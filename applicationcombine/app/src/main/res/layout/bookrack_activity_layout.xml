<?xml version="1.0" encoding="utf-8"?>
<!--书架水平滑动布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button19"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="〈" />

            <TextView
                android:id="@+id/bookcrak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="bookrack"
                android:textColor="#1A1414"
                android:textSize="36sp"
                app:fontFamily="casual" />

            <ImageButton
                android:id="@+id/change2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="150dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/booklist1" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalscrollview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:paddingLeft="20dp"
            android:paddingTop="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="1500dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageButton"
                            app:srcCompat="@drawable/b1"
                            android:layout_width="236.25dp"
                            android:layout_height="367.75dp"
                            android:background="#002C3F2E"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="JianJiaoMao\nChapter 1                                   Jul.2019" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imageButton2"
                            app:srcCompat="@drawable/b2"
                            android:layout_width="236.25dp"
                            android:layout_height="367.75dp"
                            android:background="#001D1010"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="JianJiaoMao\nChapter 2                                   Jul.2019" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/Im1"
                        app:srcCompat="@drawable/b3"
                        android:layout_width="236.25dp"
                        android:layout_height="367.75dp"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="1"
                        android:background="#001D1010"
                        android:scaleType="fitXY" />

                    <ImageButton
                        android:id="@+id/imageButton6"
                        app:srcCompat="@drawable/b4"
                        android:layout_width="236.25dp"
                        android:layout_height="367.75dp"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="1"
                        android:background="#002C3F2E"
                        android:scaleType="fitXY" />

                    <ImageButton
                        android:id="@+id/imageButton7"
                        app:srcCompat="@drawable/b5"
                        android:layout_width="236.25dp"
                        android:layout_height="367.75dp"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="1"
                        android:background="#002C3F2E"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="1"
                        android:text="到底啦~"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sizeview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0%" />

            <SeekBar
                android:id="@+id/size"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:max="100"
                android:min="0"
                android:progress="0" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>